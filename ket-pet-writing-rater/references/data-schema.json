{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KETPETWritingReportInput",
  "type": "object",
  "required": [
    "exam_level",
    "prompt_text",
    "student_text",
    "target_level",
    "layout_mode",
    "topic_title"
  ],
  "properties": {
    "exam_level": {
      "type": "string",
      "enum": ["KET", "PET"]
    },
    "genre": {
      "type": "string",
      "enum": ["article", "email", "story", "review", "message", "unknown"]
    },
    "prompt_text": {
      "type": "string",
      "minLength": 1
    },
    "topic_title": {
      "type": "string",
      "minLength": 1
    },
    "student_name": {
      "type": ["string", "null"]
    },
    "date": {
      "type": ["string", "null"]
    },
    "student_text": {
      "type": "string",
      "minLength": 1
    },
    "word_count_est": {
      "type": "integer",
      "minimum": 0
    },
    "target_level": {
      "type": "string",
      "enum": ["PET_Band5", "B2"]
    },
    "layout_mode": {
      "type": "string",
      "enum": ["A", "B"]
    },
    "overall_band": {
      "type": "string",
      "enum": ["A2", "B1", "B1+", "B2"]
    },
    "final_comment": {
      "type": "string"
    }
  }
}
